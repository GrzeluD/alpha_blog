<%= render 'shared/errors', obj: @article %>
<%= form_with(class: "form shadow rounded p-5 mb-5", model: @article, local: true) do |f| %>

  <div class="form-group row">
    <%= f.label :title, class: "col-sm-2 col-form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group row">
    <%= f.label :description, class: "col-sm-2 col-form-label" %>
    <%= f.text_area :description, rows: 4, class: "form-control" %>
  </div>
  
  <div class="form-group category-checkbox-group">
    <%= f.collection_check_boxes :category_ids, Category.all.order(name: :asc), :id, :name do |cb| %>
      <% cb.label(class: "form-check-label") { cb.check_box(class: "form-check-input") + cb.text } %>
    <% end %>
  </div>
  <%= f.submit  class: "btn btn-primary" %>
<% end %>