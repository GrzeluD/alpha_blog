<div class="container edit-container">
  <h2 class="heading"><%= "Category: #{@category.name}" %></h2>
  <% if logged_in? && current_user.admin? %>
  <%= link_to 'Edit Category', edit_category_path(@category), class: "btn btn-primary btn-bottom" %>
  <% end %>
  <div class="apple_pagination mb-4">
    <%= will_paginate @category_articles, :container => false %>
  </div>

  <%= render 'articles/article', obj: @category_articles %> 

  <div class="apple_pagination mb-4">
    <%= will_paginate @category_articles, :container => false %>
  </div>

  <div>
    <%= link_to 'Return to categories', categories_path, class: "btn btn-primary btn-bottom" %>
  </div>
</div>