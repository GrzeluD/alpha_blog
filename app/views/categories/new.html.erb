<div class="container edit-container">
  <h2 class="heading">Create new category</h2>

  <%= render 'shared/errors', obj: @category %>
  <%= form_with(class: "form shadow rounded p-5 mb-5", model: @category, local: true) do |f| %>

    <div class="form-group row">
      <%= f.label :name, class: "col-sm-2 col-form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <%= f.submit class: "btn btn-primary" %>
  <% end %>
  <div>
    <%= link_to 'Return to categories', categories_path, class: "btn btn-primary btn-bottom" %>
  </div>
</div>