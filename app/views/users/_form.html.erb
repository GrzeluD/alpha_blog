<%= render 'shared/errors', obj: @user %>
<%= form_with(class: "form shadow rounded p-5 mb-5", model: @user, local: true) do |f| %>

  <div class="form-group row">
    <%= f.label :username, class: "col-sm-2 col-form-label" %>
    <%= f.text_field :username, class: "form-control" %>
  </div>

  <div class="form-group row">
    <%= f.label :email, class: "col-sm-2 col-form-label" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group row">
    <%= f.label :password, class: "col-sm-2 col-form-label" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <%= f.submit  "Sign up", class: "btn btn-primary" %>
<% end %>