<div class="container edit-container">
  <h2 class="heading">Create a new Article</h2>

  <%= form_with(class: "form shadow rounded p-5 mb-5", scope: :session, url: login_path, local: true) do |f| %>

    <div class="form-group row">
      <%= f.label :email, class: "col-sm-2 col-form-label" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group row">
      <%= f.label :password, class: "col-sm-2 col-form-label" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <%= f.submit "Log in", class: "btn btn-primary" %>
  <% end %>

  <div>
    <%= link_to 'Return to articles', articles_path, class: "btn btn-primary btn-bottom" %>
  </div>
</div>